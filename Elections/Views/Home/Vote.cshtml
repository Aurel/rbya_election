@model IEnumerable<PositionalGrouping>

@{
	ViewData["Title"] = "RBYA Elections - Voting";
}

<h1 class="text-center">RBYA Voting</h1>
<form role="form" method="post" action="submit">
	@foreach (var group in Model)
	{
		<div class="panel panel-default">
			<div class="panel-heading">
				<h2>@group.Position</h2>
			</div>
			<ul class="list-group">
				@foreach (var candidate in group.Candidates)
				{
					<li class="list-group-item">
						<div class="media">
							<div class="media-body">
								<h4>@candidate.Name</h4>
								<h4><small>@candidate.Location</small></h4>
								<strong>Reasons:</strong> @candidate.Reasons<br />
								<strong>Background:</strong> @candidate.Background<br />
								<span class="text-light">Nominated by @candidate.Submitter</span>
							</div>
						</div>
					</li>
				}
				@foreach (var candidate in group.Candidates)
				{
					<li class="list-group-item text-right">
							<h4 style="display:inline">@candidate.Name</h4>
							<label class="switch">
								<input name="@candidate.Id" type="checkbox">
								<span class="slider"></span>
							</label>
					</li>
				}
			</ul>

		</div>
	}
    <button type="submit" class="btn-primary btn">Submit</button>
</form>